{
  "name": "number-to-words-id",
  "version": "1.2.1",
  "description": "Convert numbers to words (terbilang) in Bahasa Indonesia, Bahasa Malaysia, and English.",
  "main": "src/index.js",
  "module": "src/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.mjs",
      "require": "./src/index.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "src/",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.mjs"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "number",
    "words",
    "terbilang",
    "indonesia",
    "malaysia",
    "melayu",
    "english"
  ],
  "author": "Syarwani (https://github.com/ibnushahraa)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibnushahraa/number-to-words-id.git"
  },
  "homepage": "https://github.com/ibnushahraa/number-to-words-id",
  "devDependencies": {
    "jest": "^30.1.3"
  }
}
